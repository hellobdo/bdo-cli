#!/bin/bash

SCRIPTS_DIR="$(dirname "$(dirname "$0")")/scripts"
PREFIX_FILE="$HOME/.bdo-cli/prefix"
CLI_PREFIX=$(cat "$PREFIX_FILE" 2>/dev/null || echo "bdo")

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Check for Node.js and npm when running React commands
check_node() {
    if ! command -v node &> /dev/null || ! command -v npm &> /dev/null; then
        echo -e "${YELLOW}Node.js and npm are required for this command.${NC}"
        exit 1
    fi
}

# Show help message
show_help() {
    echo "Available commands:"
    echo "  $CLI_PREFIX create <repo-name> - Create and initialize a new repository"
    echo "  $CLI_PREFIX push - Add, commit, and push changes"
    echo "  $CLI_PREFIX branch <branch-name> - Create and push a new branch"
    echo "  $CLI_PREFIX react - Create a Vite React app"
    echo "  $CLI_PREFIX checkout - Reset to match remote main branch"
    echo "  $CLI_PREFIX create-react - Create a directory with a Vite React app"
    echo "  $CLI_PREFIX vitest - Setup Vitest in a React project"
    echo "  $CLI_PREFIX help - Show this help message"
}

case "$1" in
    "create")
        if [ -z "$2" ]; then
            echo "Usage: $CLI_PREFIX create <repo-name>"
            exit 1
        fi
        bash "$SCRIPTS_DIR/create.sh" "${@:2}"
        ;;
    "push")
        bash "$SCRIPTS_DIR/push.sh"
        ;;
    "branch")
        if [ -z "$2" ]; then
            echo "Usage: $CLI_PREFIX branch <branch-name>"
            exit 1
        fi
        bash "$SCRIPTS_DIR/branch.sh" "${@:2}"
        ;;
    "react")
        check_node
        if [ -z "$2" ]; then
            echo "Usage: $CLI_PREFIX react <app-name>"
            exit 1
        fi
        bash "$SCRIPTS_DIR/react.sh" "${@:2}"
        ;;
    "checkout")
        bash "$SCRIPTS_DIR/checkout.sh"
        ;;
    "create-react")
        check_node
        bash "$SCRIPTS_DIR/create-react.sh"
        ;;
    "vitest")
        check_node
        bash "$SCRIPTS_DIR/vitest.sh"
        ;;
    "help"|"--help"|"-h"|"")
        show_help
        ;;
    *)
        echo -e "${RED}Unknown command: $1${NC}"
        echo "Run '$CLI_PREFIX help' to see available commands"
        exit 1
        ;;
esac 